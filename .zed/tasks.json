[
  {
    "label": "Frontend: Lint",
    "command": "npm",
    "args": ["run", "lint"],
    "cwd": "/workspace/front",
    "reveal": "always",
  },
  {
    "label": "Frontend: Lint Fix (oxlint)",
    "command": "npm",
    "args": ["run", "lint:oxlint:fix"],
    "cwd": "/workspace/front",
    "reveal": "always",
  },
  {
    "label": "Frontend: Format (Prettier)",
    "command": "npm",
    "args": ["run", "lint:prettier:fix"],
    "cwd": "/workspace/front",
    "reveal": "always",
  },
  {
    "label": "Frontend: Test Unit",
    "command": "npm",
    "args": ["run", "test:unit"],
    "cwd": "/workspace/front",
    "reveal": "always",
  },
  {
    "label": "Frontend: Test Unit (Watch)",
    "command": "npm",
    "args": ["run", "test:unit:watch"],
    "cwd": "/workspace/front",
    "reveal": "always",
  },
  {
    "label": "Frontend: Test Browser",
    "command": "npm",
    "args": ["run", "test:browser"],
    "cwd": "/workspace/front",
    "reveal": "always",
  },
  {
    "label": "Frontend: Type Check",
    "command": "npm",
    "args": ["run", "lint:tsc"],
    "cwd": "/workspace/front",
    "reveal": "always",
  },
  {
    "label": "Backend: Test",
    "command": "go",
    "args": ["test", "./..."],
    "cwd": "/workspace/back",
    "reveal": "always",
  },
  {
    "label": "Backend: Test Verbose",
    "command": "go",
    "args": ["test", "-v", "./..."],
    "cwd": "/workspace/back",
    "reveal": "always",
  },
  {
    "label": "Backend: Format",
    "command": "goimports",
    "args": ["-w", "."],
    "cwd": "/workspace/back",
    "reveal": "always",
  },
  {
    "label": "Backend: Build",
    "command": "go",
    "args": ["build", "-o", "app"],
    "cwd": "/workspace/back",
    "reveal": "always",
  },
  {
    "label": "Backend: Run",
    "command": "go",
    "args": ["run", "main.go"],
    "cwd": "/workspace/back",
    "reveal": "always",
  },
  {
    "label": "Docker: Start All Services",
    "command": "make",
    "args": ["start"],
    "cwd": "/workspace",
    "reveal": "always",
  },
  {
    "label": "Docker: Stop All Services",
    "command": "make",
    "args": ["stop"],
    "cwd": "/workspace",
    "reveal": "always",
  },
  {
    "label": "Docker: View Logs",
    "command": "make",
    "args": ["logs"],
    "cwd": "/workspace",
    "reveal": "always",
  },
  {
    "label": "Docker: Clean",
    "command": "make",
    "args": ["clean"],
    "cwd": "/workspace",
    "reveal": "always",
  },
  {
    "label": "Database: Connect (psql)",
    "command": "psql",
    "args": ["-h", "postgres", "-U", "slotfinder", "-d", "slotfinder"],
    "cwd": "/workspace",
    "reveal": "always",
  },
  {
    "label": "Git: Lazygit",
    "command": "lazygit",
    "args": [],
    "cwd": "/workspace",
    "reveal": "always",
  },
]
